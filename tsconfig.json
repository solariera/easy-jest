{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "isolatedModules": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
